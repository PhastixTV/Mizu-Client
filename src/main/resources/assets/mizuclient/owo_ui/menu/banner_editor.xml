<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>


                <scroll direction="vertical">
                    <flow-layout direction="vertical">
                        <children>
                            <flow-layout direction="horizontal">
                                <children>
                                    <flow-layout direction="vertical">
                                        <children>
                                            <button id="give-button">
                                                <sizing>
                                                    <horizontal method="fixed">95</horizontal>
                                                </sizing>
                                            </button>

                                            <flow-layout direction="horizontal">
                                                <children>
                                                </children>

                                                <sizing>
                                                    <vertical method="fixed">20</vertical>
                                                    <horizontal method="fixed">95</horizontal>
                                                </sizing>

                                                <margins>
                                                    <all>1</all>
                                                </margins>
                                            </flow-layout>
                                        </children>
                                        <gap>4</gap>

                                        <sizing>
                                            <vertical method="fixed">200</vertical>
                                        </sizing>

                                        <vertical-alignment>center</vertical-alignment>
                                        <horizontal-alignment>center</horizontal-alignment>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="content">
                                        <children>
                                            <flow-layout direction="ltr-text-flow" id="color-layout">
                                                <children>
                                                </children>

                                                <sizing>
                                                    <horizontal method="fill">100</horizontal>
                                                    <vertical method="fill">100</vertical>
                                                </sizing>

                                                <vertical-alignment>top</vertical-alignment>
                                                <horizontal-alignment>center</horizontal-alignment>

                                            </flow-layout>

                                        </children>

                                        <sizing>
                                            <horizontal method="fill">60</horizontal>
                                            <vertical method="fill">500</vertical>
                                        </sizing>

                                        <surface>
                                            <panel dark="true"/>
                                        </surface>

                                        <padding>
                                            <all>6</all>
                                        </padding>
                                    </flow-layout>
                                </children>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <horizontal-alignment>center</horizontal-alignment>

                            </flow-layout>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>30</vertical>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>